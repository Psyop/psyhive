#!/usr/bin/env python

"""List a directory using full (absolute) paths."""

import sys

from psyhive.utils import abs_path, find


def _main():
    """Execute lsfp."""
    if len(sys.argv) > 1:
        _paths = [abs_path(sys.argv[1])]
    else:
        _paths = find(depth=1)
    _win = '--win' in sys.argv
    for _path in _paths:
        print abs_path(_path, win=_win)


if __name__ == '__main__':
    _main()
